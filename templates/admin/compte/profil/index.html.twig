{% extends 'base.admin.html.twig' %}

{% block title %}
	Tableau de bord
{% endblock %}

{% block titre %}
	Mon Profil
{% endblock %}

{% block boutons %}
	{# <a href="#" class="btn btn-otline-dark align-items-center">
			<i class="icon-share"></i>
			Share</a>
		<a href="#" class="btn btn-otline-dark">
			<i class="icon-printer"></i>
			Print</a>
		<a href="#" class="btn btn-primary text-white me-0">
