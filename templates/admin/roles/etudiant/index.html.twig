{% extends 'base.admin.html.twig' %}

{% block title %}
	liste des etudiants inscrit sur unz-doc.
{% endblock %}

{% block titre %}
	liste de tous les etudiants inscrit sur unz-doc.
{% endblock %}

{% block boutons %}
<a href="{{ path("app_admin_roles_etudiant_ajout") }}" class="btn btn-outline-primary align-items-center" title="Cliquez ici pour ajouter un examen">
		<i class="mdi mdi-arrow-all  "></i>Ajouter un etudiant
    </a>
	{# <a href="{{ path("app_admin_module_liste", {"idDepartement": departement.id, "idFiliere": filiere.id, "idLicence": licence.id, "idOption": option.id, "idAnnee": annee.id}) }}" class="btn btn-outline-primary align-items-center" title="Cliquez ici pour ajouter un examen">
		<i class="mdi mdi-reply-all  "></i>Retour
    </a> #}
{% endblock %}

{% block body %}
            <div>
              <p>IMPORTANT: <strong>Un etudiant est juste un utilisateur pouvant telecharger des examens et corrections sur unz-doc</strong></p>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"></h4>
                  <div class="table-responsive">
                    <table class="table table">
                      <thead>
                        <tr>
                          <th>Nom Prénom</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                      {% for etudiant in etudiants %}
                        <tr>
                          <td><strong>{{ etudiant.nomPrenom }}</strong></td>
                          <td>
                            <a href="{{ path("app_admin_roles_etudiant_detail", {"idEtudiant": etudiant.id}) }}" class="btn btn-outline-dark">Détails</a>
                          {# <a href="{{ path("app_admin_filiere_liste", {"idDepartement": departement.id}) }}",  class="btn btn-outline-primary">Filières</a> #}
                          </td>
                        </tr>
                      {% endfor %}
                      </tbody>
                    </table>
                    <div class="navigation flex justify-center">
	                    {{ knp_pagination_render(etudiants) }}
                    </div>
                  </div>
                </div>
              </div>
            </div>

{% endblock %}
