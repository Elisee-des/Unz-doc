{% extends 'base.admin.html.twig' %}

{% block title %}
	Liste des departements
{% endblock %}

{% block titre %}
	Liste des departements
{% endblock %}

{% block boutons %}
	<a href="{{ path("app_admin_departement_ajout") }}" class="btn btn-outline-primary align-items-center" title="Cliquez ici pour ajouter un departement">
		<i class="mdi mdi-arrow-all  "></i>Ajouter un departement
    </a>
{% endblock %}

{% block body %}
	
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"></h4>
                  <div class="table-responsive">
                    <table class="table table">
                      <thead>
                        <tr>
                          <th>Départements</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                      {% for departement in departements %}
                        <tr>
                          <td><strong>{{ departement.nom }}</strong></td>
                          <td>
                            <a href="{{ path("app_admin_departement_detail", {"idDepartement": departement.id}) }}" class="btn btn-outline-dark">Détails</a>
                          <a href="{{ path("app_admin_filiere_liste", {"idDepartement": departement.id}) }}",  class="btn btn-outline-primary">Filières</a>
                          </td>
                        </tr>
                      {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

{% endblock %}
