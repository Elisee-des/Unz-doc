					</ul>
				</nav>
				<!-- .navbar -->

				{% if is_granted("ROLE_ETUDIANT") %}
				<a href="{{ path("app_user_dashboard") }}" class="btn-book-a-table">Mon compte</a>
				{% elseif is_granted("ROLE_ADMIN") %}
				<a href="{{ path("app_admin_dashboard") }}" class="btn-book-a-table">Mon compte</a>
				{% elseif is_granted("ROLE_EDITEUR") %}
				<a href="{{ path("app_admin_dashboard") }}" class="btn-book-a-table">Mon compte</a>
				{% elseif is_granted("ROLE_BANI") %}
				<a href="{{ path("app_logout") }}" class="btn-book-a-table">Déconnexion</a>
				{% elseif is_granted("ROLE_SUPER_ADMIN") %}
				<a href="{{ path("app_admin_dashboard") }}" class="btn-book-a-table">Mon compte</a>
				{% else %}
					<a href="{{ path("app_login") }}" class="btn-book-a-table">Connexion</a>
				{% endif %}
				<i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
				<i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

			</div>
			
		</header>
			{% if is_granted("ROLE_BANI") %}
