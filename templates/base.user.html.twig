				</script>
				<script>
				$(document).ready(function () {

					$(".btn-actions").click(function (e) {
						e.preventDefault()
						$("#modale").modal("show")
						let url = $(this).attr("href")
						$('#modale-body').load(url);
						});
					})

				{% for message in app.flashes("success") %}
					Swal.fire({
						"icon":"success",
						"title":"Success",
						"text":"{{ message }}"
					})
				{% endfor %}
				{% for message in app.flashes("error") %}
					Swal.fire({
						"icon":"error",
						"title":"Erreur",
						"text":"{{ message }}"
					})
				{% endfor %}
				</script>

